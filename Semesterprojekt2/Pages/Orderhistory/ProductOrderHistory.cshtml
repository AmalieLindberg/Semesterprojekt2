@page
@using Semesterprojekt2.Models.Shop;
@model Semesterprojekt2.Pages.Orderhistory.ProductOrderHistoryModel
@{
}
<head>
    <style>
        .btn-outline-light {
            border: 1px solid black;
            background-color: transparent;
            color: black;
            padding: 8px 16px;
            text-align: center;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            box-shadow: 2px 2px 2px gray;
        }

    </style>
</head>
<center><h1>Product Order history</h1></center>
<div style="text-align: center">
    <a class="btn btn-outline-light" asp-page="BookATimeOrderHistory">Go to: Book a Time Order History</a>
</div>

<hr />

<div class="test">
    <table class="table table-bordered table-hover table-striped" width="60%">
        <thead>
            <tr class="btn-secondary active">
                <th>ID</th>
                <th>Date</th>
                <th>Product</th>
                <th>Count</th>
                <th>Total Order Price</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.MyProductOrders != null)
            {
                foreach (var order in Model.MyProductOrders)
                {
                    <tr class="btn-secondary">
                        <td>
                            @order.OrderId
                        </td>
                        <td>@order.Date</td>
                        <td>
                            <p> Product name: @order.Product.Name</p>
                            <p> Price: @order.Product.Price</p>
                            <img src="~/Images/Shop/@order.Product.ProductImage" alt="Product image" style="width:40%; max-width: 300px;" />
                        </td>
                        <td>
                            @order.Counts
                        </td>
                        <td>
                             @(order.Counts * order.Product.Price),-
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>