@page
@model Semesterprojekt2.Pages.Profil.Dog.EditDogModel
@{
}

<form method="post" enctype="multipart/form-data">

	<div class="form-group">
		<label asp-for="Dog.Name" class="control-label"></label>
		<input asp-for="Dog.Name" class="form-control" />
		<span asp-validation-for="Dog.Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Dog.Race" class="control-label"></label>
		<input asp-for="Dog.Race" class="form-control" />
		<span asp-validation-for="Dog.Race" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Dog.Age" class="control-label"></label>
		<input asp-for="Dog.Age" class="form-control" />
		<span asp-validation-for="Dog.Age" class="text-danger"></span>
	</div>

	<div class="form-group">

		<label asp-for="Dog.Comments" class="control-label"> Does your dog have any behavioral issues I should be aware of (e.g., aggression or tendency to bite)?, please write them here:</label> <br />
		<textarea asp-for="Dog.Comments" rows="4" cols="141"></textarea>
		<span asp-validation-for="Dog.Comments" class="text-danger"></span>

	</div>


	<div class="form-group">
		<label asp-for="@Model.DogImages" class="control-label"></label>
		<div class="custom-file">
			<input asp-for="@Model.DogImages" class="custom-file-input form-control" />
		</div>
	</div>
	
	<div class="form-group">
		<label readonly asp-for="Dog.Id" hidden class="control-label"></label>
		<input readonly asp-for="Dog.Id" hidden class="form-control" />
		<span readonly asp-validation-for="Dog.Id" hidden class="text-danger"></span>
	</div>
	<p>
		<div class="form-group">
			<input type="submit" value="Update" class="btn btn-primary" />
		</div>
	</p>
</form>