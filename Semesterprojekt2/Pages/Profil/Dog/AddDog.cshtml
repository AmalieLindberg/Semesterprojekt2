@page
@model Semesterprojekt2.Pages.Profil.Dog.AddDogModel
@{
}


<form method="post" enctype="multipart/form-data">

	<div class="form-group">
		<label asp-for="Dog.Name" class="control-label">Your dogs name:</label>
		<input asp-for="Dog.Name" class="form-control" />
		<span asp-validation-for="Dog.Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Dog.Race" class="control-label">Your dogs race:</label>
		<input asp-for="Dog.Race" class="form-control" />
		<span asp-validation-for="Dog.Race" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Dog.Age" class="control-label">Your dogs age:</label>
		<input asp-for="Dog.Age" class="form-control" />
		<span asp-validation-for="Dog.Age" class="text-danger"></span>
	</div>


	<div class="form-group">
		<label asp-for="@Model.DogImage" class="control-label">Image of your dog:</label>
		<div class="custom-file">
			<input asp-for="@Model.DogImage" class="custom-file-input form-control" />
		</div>
	</div>
	<div class="form-group">

		<label asp-for="Dog.Comments" class="control-label"> Does your dog have any behavioral issues I should be aware of (e.g., aggression or tendency to bite)?, please write them here:</label> <br />
		<textarea asp-for="Dog.Comments" rows="4" cols="147"></textarea>
		<span asp-validation-for="Dog.Comments" class="text-danger"></span>

	</div>
	<p>
		<div class="form-group">
			<input type="submit" value="Create dog" class="btn btn-primary" />
		</div>
	</p>
</form>
