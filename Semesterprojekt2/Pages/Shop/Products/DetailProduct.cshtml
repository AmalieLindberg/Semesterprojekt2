@page 
@using Semesterprojekt2.Pages.Login
@model Semesterprojekt2.Pages.Shop.Products.DetailProductModel
@{
}
<html>
<head>
    <title>Product Page</title>
    <style>
        body {
            font-family: 'Lato', sans-serif; /* Sætter skrifttypen for siden */
            background-color: rgba(198, 81, 39, 0.08); /* Let orange baggrundsfarve */
        }

        /* Container der centrerer produktinformationen og giver spacing */
        .product-container {
            display: flex; /* Flexbox til at arrangere billede og detaljer side om side */
            padding: 20px; /* Afstand inden i containeren */
            max-width: 1200px; /* Maksimal bredde for at undgå for bred visning */
            margin: auto; /* Centrerer containeren horisontalt */
        }

        /* Styling specifikt for produktbilledet */
        .product-image {
            flex: 0 1 auto; /* Flex item der ikke vokser, men kan krympe */
            width: 200%; /* Halvdelen af containerens bredde */
            height: auto;
        }

            .product-image img {
                width: 400px; /* Set a specific width */
                height: 400px; /* Set a specific height */
                object-fit: cover; /* Ensure the image covers the specified dimensions */
            }

        /* Container for tekstlige produktinformationer */
        .product-details {
            flex-grow: 1; /* Tager den resterende plads i containeren */
            padding-left: 20px; /* Add some padding to the left for spacing */
            padding-top: 20px; /* Add some padding to the top for spacing */
        }

            .product-details h1 {
                font-size: 24px; /* Større skriftstørrelse for produktnavn */
                margin: 10px 0; /* Vertikal margin omkring produktnavnet */
            }

            .product-details .price {
                font-size: 20px; /* Skriftstørrelse for pris */
                font-weight: bold; /* Fed skrift for at fremhæve pris */
            }

        /* Container til handlingsknapper under produktinformationer */
        .product-actions {
            margin-top: 20px; /* Afstand fra produktinformationerne til knapperne */
        }

        /* Generel knap styling */
        .btn {
            display: inline-block; /* Buttons displayed as inline-block elements */
            width: max-content; /* Button width determined by content */
            padding: 10px 20px; /* Padding around button text */
            margin-top: 10px; /* Distance from elements above the button */
            text-align: center; /* Center the text in the button */
            text-decoration: none; /* Remove underline from links */
            color: #fff; /* White text color */
            background-color: #000; /* Black background color */
            border: none; /* No border around the button */
            cursor: pointer; /* Cursor changes to pointer on hover */
            border-radius: 5px; /* Rounded corners */
        }


        /* Specifik styling for "Add to Cart" knappen */
        .add-to-cart {
            width: 50%; /* Gør knappen bredere */
        }

        /* Container der holder Rediger/Slet knapper ved siden af hinanden */
        .edit-delete-container {
            display: flex; /* Use flexbox to arrange the buttons */
            justify-content: space-between; /* Distribute buttons evenly */
            width: 50%; /* Width same as 'Add to Cart' button */
            box-sizing: border-box; /* Include padding in width */
        }

        /* Ens stil for både rediger og slet knapperne */
        .edit-button, .delete-button {
            flex: 1; /* Both buttons take up equal space */
            margin: 0 1px; /* Space between buttons */
            padding: 10px; /* Padding inside the buttons */
            background-color: #FCC681; /* Background color for edit button */
            color: #ffffff; /* White text color */
            text-align: center; /* Center text in the button */
            border-radius: 5px; /* Rounded corners */
        }

        .delete-button {
            background-color: #EAA193; /* Background color for delete button */
        }

            .edit-button i, .delete-button i {
                margin-right: 5px; /* Space between icon and text */
            }

        /* Hover styles for edit and delete buttons */
        .edit-button:hover {
            background-color: #e6b057; /* Slightly darker shade for hover */
        }

        .delete-button:hover {
            background-color: #d29283; /* Slightly darker shade for hover */
        }

    </style>
</head>
<body>
    <main>
        <!-- Hoved container for produktvisning -->
        <div class="product-container">
            <!-- Billede container -->
            <div class="product-image">
                <img src="~/images/Shop/@Model.Product.ProductImage" />
            </div>
            <!-- Detaljer container -->
            <div class="product-details">
                <h1>@Model.Product.Name</h1>
                <p class="price">@Model.Product.Price,-</p>
                <p class="brand">Brand: @Model.Product.Brand</p>
                <p>@Model.Product.Description</p>

                <!-- Knapper til produktaktioner som tilføj til kurv, rediger og slet -->
                <div class="product-actions">
                    <form method="post" asp-page-handler="AddToCart">
                        <input type="hidden" name="productId" value="@Model.Product.Id" />
                        <button class="btn add-to-cart" type="submit">Add to cart</button>
                    </form>
                    <div class="edit-delete-container">
                                            @if (LoginModel.LoggedInUser != null && LoginModel.LoggedInUser.Role == "Admin")
                    {
                            <a class="btn btn-primary btn-sm edit-button" title="Edit" asp-page="/Shop/Products/EditProduct" asp-route-id="@Model.Product.Id"><i class="fa fa-edit"></i> Product</a>
                            <a class="btn btn-primary btn-sm delete-button" title="Delete" asp-page="/Shop/Products/DeleteProduct" asp-route-id="@Model.Product.Id"><i class="fa fa-trash"></i> Product</a>
                    }
                </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>

