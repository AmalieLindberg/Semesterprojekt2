@page
@using Semesterprojekt2.Models.Shop
@model Semesterprojekt2.Pages.Shop.Products.AddProductModel
@{
}
<!-- Overskrift for siden, hvor man kan oprette et nyt produkt -->
<h1>Create new Product</h1>

<!-- Formular til at tilføje et nyt produkt. Bruger POST metode og understøtter filupload. -->
<form method="post" enctype="multipart/form-data">
	<!-- Formularfelt for produktnavn. -->
	<div class="form-group">
		<label asp-for="@Model.Product.Name" class="control-label"></label>
		<input asp-for="@Model.Product.Name" class="form-control" />
		<span asp-validation-for="Product.Name" class="text-danger"></span>
	</div>
	<!-- -||- -->
	<div class="form-group">
		<label asp-for="@Model.Product.Price" class="control-label"></label>
		<input asp-for="@Model.Product.Price" class="form-control" />
		<span asp-validation-for="Product.Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Product.Type" class="control-label"></label>
		<input asp-for="@Model.Product.Type" class="form-control"></input>
		<span asp-validation-for="Product.Type" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Product.Brand" class="control-label"></label>
		<input asp-for="@Model.Product.Brand" class="form-control" />
		<span asp-validation-for="Product.Brand" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Product.Amount" class="control-label"></label>
		<input asp-for="@Model.Product.Amount" class="form-control" />
		<span asp-validation-for="Product.Amount" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Product.Description" class="control-label"></label>
		<input asp-for="@Model.Product.Description" class="form-control" />
		<span asp-validation-for="Product.Description" class="text-danger"></span>
	</div>
	<!-- Formularfelt for produktbillede med tilpasset filvælger. -->
	<div class="form-group">
		<label asp-for="@Model.Photo" class="control-label"></label>
		<div class="custom-file">
			<input asp-for="@Model.Photo" class="custom-file-input form-control" />
		</div>
	</div>
	<!-- Submit-knap til at sende formular data. -->
	<p>
		<div class="form-group">
			<input type="submit" value="Create" class="btn btn-primary" style="background-color: #C65127; color: #ffffff;" />
		</div>
	</p>
</form>