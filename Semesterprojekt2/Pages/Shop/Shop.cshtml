@page
@using Semesterprojekt2.Pages.Login
@model Semesterprojekt2.Pages.Shop.ShopModel
@{
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        /* Basal styling for hele siden */
        body {
            font-family: "Lato", sans-serif; /* Angiver skrifttype */
            background-color: rgba(198, 81, 39, 0.08); /* Baggrundsfarve med transparens */
        }

        /* Styling for produktkort */
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            width: 100%; /* Change to 100% for responsiveness */
            max-width: 300px; /* Maximum width of the card */
            margin: 10px;
            text-align: center;
            font-family: arial;
            position: relative;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            height: 400px;
        }

            .card img {
                width: 100%;
                height: 270px;
                object-fit: cover;
            }

            .card h3, .card p {
                margin: 10px 0; /* Consistent spacing for title and price */
            }


        /* Styling for prisindikation på kort */
        .price {
            color: grey; /* Farve på pris */
            font-size: 20px; /* Størrelse på pris tekst */
        }

        /* Styling for knapper på kort */
        .card button {
            border: none;
            outline: 0;
            padding: 6px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
            margin-top: auto;
        }

            /* Hover-effekt for knapper */
            .card button:hover {
                opacity: 0.7; /* Gør knappen delvist gennemsigtig ved hover */
            }

        /* Container til kort, som viser flere produkter */
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center; /* Center the cards */
            margin: 0 auto; /* Center the container */
            max-width: 100%; /* Set a max-width for the container */
        }

        /* Stil for links inden i kort, så de nedarver farve og ingen dekoration */
        .card a {
            display: block;
            color: inherit;
            text-decoration: none;
        }

        /* Beskrivelsesfelt med ellipsis for at begrænse tekstvisning */
        .description {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Styling for inputgruppen */
        .input-group {
            margin: 0; /* Remove auto margin */
            max-width: 100%; /* Allow full width usage */
            display: flex;
            justify-content: flex-start; /* Align items to the left */
            align-items: center;
            gap: 0px; /* Smaller gap between fields */
        }

    </style>
</head>
<body>

    <form method="post">
        <div class="input-group mb-3">
            <input asp-for="SearchString" class="form-control mr-1" style="max-width: 200px;" placeholder="Indtast søgeterm" />
            <input type="submit" asp-page-handler="NameSearch" value="Søg" style="background-color: #C65127; color: #ffffff;" class="btn btn-primary me-2" />
            <div class="input-group-prepend">
                <span class="input-group-text">Min</span>
            </div>
            <input asp-for="MinPrice" class="form-control mr-1" style="max-width: 100px;" />
            <div class="input-group-prepend">
                <span class="input-group-text">Max</span>
            </div>
            <input asp-for="MaxPrice" class="form-control mr-1" style="max-width: 100px;" />
            <input type="submit" asp-page-handler="PriceFilter" value="Filtrer" style="background-color: #C65127; color: #ffffff;" class="btn btn-primary" />
        </div>
    </form>

    @if (LoginModel.LoggedInUser != null && LoginModel.LoggedInUser.Role == "Admin")
    {
        <p>
            <a class="btn btn-primary" style="float: right; position:absolute; right: 10px; top: 103px; background-color: #C65127; color: #ffffff;" asp-page="Products/AddProduct">Opret et nyt produkt</a>
        </p>
    }

    <div class="card-container">
        @if (@Model.Products != null)
        {
            foreach (var product in Model.Products)
            {
                <div class="card">
                    <a href="@Url.Page("/Shop/Products/DetailProduct", new { id = product.Id })" style="text-decoration:none; color:inherit;">
                        <img src="~/images/Shop/@product.ProductImage" alt="Product Image">
                        <h3 style="color: #C65127;">@product.Name</h3>
                        <p class="price">@product.Price,-</p>
                    </a>
                    <form method="post" asp-page-handler="AddToCart">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit">Add to cart</button>
                    </form>
                </div>
            }
        }
    </div>

</body>
</html>