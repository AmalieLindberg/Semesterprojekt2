@page
@model Semesterprojekt2.Pages.Shop.ShopModel
@{
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: "Lato", sans-serif;
            background-color: rgba(198, 81, 39, 0.08);
        }

        .sidenav {
            width: 130px;
            height: 800px;
            position: absolute;
            z-index: 1;
            top: 85px;
            left: 0px;
            background-color: rgb(239,231,225);
            overflow-x: hidden;
            overflow-y: auto;
            padding: 8px 0;
        }

            .sidenav a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: black;
                display: block;
                font-size: 18px;
            }

                .sidenav a:hover {
                    color: #064579;
                }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: 10px;
            text-align: center;
            font-family: arial;
        }

        .price {
            color: grey;
            font-size: 20px;
        }

        .card button {
            border: none;
            outline: 0;
            padding: 12px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

            .card button:hover {
                opacity: 0.7;
            }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            margin-left: 135px;
        }

        .description {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .btn {
            float: right; 
            position: absolute;
            right: 0;
            top: 103px;
        }

        .input-group {
            margin-left: 85px;
        }

    </style>
</head>
<body>

    <div class="sidenav">
        <a asp-page="/Shop/Soaps">Soap</a>
        <a asp-page="/Shop/Toys">Toys</a>
        <a asp-page="/Shop/Brushes">Brushes</a>
        <a asp-page="/Shop/Treats">Treats</a>
    </div>

    <form method="post">
        <div class="input-group mb-3">
            <!-- Search term input -->
            <input asp-for="SearchString" class="form-control mr-1" style="max-width: 200px;" placeholder="Enter search term" />

            <!-- Search button -->
            <input type="submit" asp-page-handler="NameSearch" value="Search" style="background-color: #C65127; color: #ffffff; top: 0px; border-radius: .25rem;" class="btn btn-primary me-2" />

            <!-- Min price input -->
            <div class="input-group-prepend">
                <span class="input-group-text">Min</span>
            </div>
            <input asp-for="MinPrice" class="form-control mr-1" style="max-width: 100px;" />

            <!-- Max price input -->
            <div class="input-group-prepend">
                <span class="input-group-text">Max</span>
            </div>
            <input asp-for="MaxPrice" class="form-control mr-1" style="max-width: 100px;" />

            <!-- Filter button -->
            <input type="submit" asp-page-handler="PriceFilter" value="Filter" style="background-color: #C65127; color: #ffffff; top: 0px;" class="btn btn-primary" />
        </div>
    </form>

    <p>
        <a class="btn btn-primary" style="background-color: #C65127;; color: #ffffff;" asp-page="Products/AddProduct">Create a new Product</a>
    </p>

    <br>
    <br>
    
    <div class="card-container">

    @if (@Model.Products != null)
    {
        foreach (var product in Model.Products)
        {
                <div class="card">
                    <img src="/Images/Shop/testbillede.jpg" style="width:100%">
                    <h3 style="color: #C65127;">@product.Name</h3>
                    <p class="price">@product.Price</p>
                    <p class="description">@product.Description</p>
                    <p class="description">@product.Id</p>
                    <p><button>Add to Cart</button></p>
                </div>
        }
    }
    </div>

</body>
</html>
